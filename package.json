{
    "name": "express_boilerplate",
    "version": "1.0.0",
    "main": "src/index.js",
    "license": "MIT",
    "scripts": {
        "start": "nodemon src/index.js",
        "build": "webpack --mode production",
        "dev": "webpack --mode development && nodemon build/bundle.js",
        "pm2:dev": "pm2 start build/bundle.js -i max --max-memory-restart 300M --exp-backoff-restart-delay=100",
        "pm2:pro": "pm2 start ecosystem.config.js",
        "fm": "prettier --single-quote --trailing-comma all --tab-width 4 --write src/**/*.{js,json,jsx,css,scss,ts,tsx}",
        "format": "lint-staged",
        "prepare": "husky install"
    },
    "lint-staged": {
        "src/**/*.{js,json,jsx,css,scss,ts,tsx}": "prettier --single-quote --trailing-comma all --tab-width 4 --write"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "ejs": "^3.1.9",
        "exceljs": "^4.4.0",
        "express": "^4.18.2",
        "express-ejs-layouts": "^2.5.1",
        "express-rate-limit": "^7.1.4",
        "express-session": "^1.17.3",
        "express-winston": "^4.2.0",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "multer-storage-cloudinary": "^4.0.0",
        "nodemailer": "^6.9.7",
        "passport": "^0.6.0",
        "passport-google-oauth20": "^2.0.0",
        "redis": "^4.6.10",
        "rotating-file-stream": "^3.1.1",
        "slugify": "^1.6.6",
        "socket.io": "^4.7.2",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "winston-mongodb": "^5.1.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.23.0",
        "@babel/core": "^7.23.3",
        "@babel/preset-env": "^7.23.3",
        "babel-loader": "^9.1.3",
        "dotenv-webpack": "^8.0.1",
        "husky": "^8.0.3",
        "lint-staged": "^15.1.0",
        "nodemon": "^3.0.1",
        "pm2": "^5.3.0",
        "prettier": "^3.1.0",
        "webpack": "^5.89.0",
        "webpack-bundle-analyzer": "^4.10.1",
        "webpack-cli": "^5.1.4",
        "webpack-node-externals": "^3.0.0"
    }
}
